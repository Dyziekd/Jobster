<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activities.VirtualProfile.ProfileCreatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Profile creator fragment -->
        <FrameLayout
            android:id="@+id/profile_creator__fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
        </FrameLayout>

        <!-- Arrows (back and next) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true">

            <!-- Back button -->
            <ImageButton
                android:id="@+id/profile_creator__back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/arrow_back"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button_text"/>

            <!-- Next button -->
            <ImageButton
                android:id="@+id/profile_creator__next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_next"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/next_button_text"/>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>