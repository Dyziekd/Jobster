<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.daniel.jobster">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/MyTheme">

        <!-- Login -->
        <activity
            android:name=".Activities.Other.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Register -->
        <activity
            android:name=".Activities.Other.RegisterActivity"
            android:screenOrientation="portrait"/>

        <!-- Profile creator -->
        <activity
            android:name=".Activities.VirtualProfile.ProfileCreatorActivity"
            android:screenOrientation="portrait"/>

        <!-- Virtual profile -->
        <activity
            android:name=".Activities.VirtualProfile.VirtualProfileActivity"
            android:screenOrientation="portrait"/>

        <!-- Settings -->
        <activity
            android:name=".Activities.Other.SettingsActivity"
            android:screenOrientation="portrait"/>

        <!-- Employee menu -->
        <activity
            android:name=".Activities.Menu.EmployeeMenuActivity"
            android:screenOrientation="portrait"/>

        <!-- Employer menu -->
        <activity
            android:name=".Activities.Menu.EmployerMenuActivity"
            android:screenOrientation="portrait"/>

        <!-- Opinions -->
        <activity
            android:name=".Activities.Opinions.OpinionsActivity"
            android:screenOrientation="portrait"/>

        <!-- Add opinion -->
        <activity
                android:name=".Activities.Opinions.AddOpinionActivity"
                android:screenOrientation="portrait"/>

        <!-- Offer explorer -->
        <activity
            android:name=".Activities.Offers.OffersExplorerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>

        <!-- Add offer -->
        <activity
            android:name=".Activities.Offers.AddOfferActivity"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>

        <!-- Offer details -->
        <activity
            android:name=".Activities.Offers.OfferDetailsActivity"
            android:screenOrientation="portrait"/>

        <!-- Applications explorer -->
        <activity
            android:name=".Activities.Applications.ApplicationsExplorerActivity"
            android:screenOrientation="portrait"/>

        <!-- Offer applications explorer -->
        <activity
            android:name=".Activities.Applications.OfferApplicationsExplorerActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>